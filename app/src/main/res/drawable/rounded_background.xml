<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色 -->
    <solid android:color="#f0f0f0" /> <!-- 可以根据需要修改颜色 -->

    <!-- 设置圆角 -->
    <corners android:radius="16dp" /> <!-- 设置圆角半径 -->

    <!-- 设置阴影（可选） -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
